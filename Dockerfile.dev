FROM node:18.9.1

# Set the working directory in the container
WORKDIR /app

# Copy package.json and package-lock.json to install dependencies
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Set environment variables for development
ENV NODE_ENV=development
ENV REACT_APP_API_BASE_URL=http://localhost/api
ENV REACT_APP_WS_BASE_URL=ws://localhost/api
# Allow connecting to the host
ENV DANGEROUSLY_DISABLE_HOST_CHECK=true
# Ensure WebSocket connections go through Nginx
ENV WDS_SOCKET_PORT=80

# Create a start script that generates runtime-config.js before starting the app
RUN echo '#!/bin/sh\n\
echo "window.RUNTIME_CONFIG = { API_BASE_URL: \"http://localhost/api\", WS_BASE_URL: \"ws://localhost/api\" };" > /app/public/runtime-config.js\n\
npm start\n\
' > /app/start.sh && chmod +x /app/start.sh

# Expose port 3000 for the development server
EXPOSE 3000

# Start the app in development mode
CMD ["/app/start.sh"] 